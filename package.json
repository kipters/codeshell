{
	"name": "codeshell",
	"displayName": "CodeShell",
	"description": "Start a new PowerShell window for the project folder",
	"version": "0.2.0",
	"publisher": "Kipters",
	"repository": {
		"type": "git",
		"url": "https://github.com/kipters/codeshell"
	},
	"engines": {
		"vscode": "^0.10.1"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.startShell"
	],
	"main": "./out/src/extension",
	"contributes": {
		"commands": [
			{
				"command": "extension.startUnrestrictedShell",
				"title": "Start PowerShell (Unrestricted)"
			},
			{
				"command": "extension.startShell",
				"title": "Start PowerShell"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "node ./node_modules/vscode/bin/compile",
		"compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
	},
	"devDependencies": {
		"typescript": "^1.6.2",
		"vscode": "0.10.x"
	}
}